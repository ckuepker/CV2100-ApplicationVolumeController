<Application x:Class="WPFExperiment.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="View/MainWindowView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="MenuItem">
                <Setter Property="Padding" Value="5"></Setter>
            </Style>
            <Style x:Key="ToolbarButton">
                <Style.Setters>
                    <Setter Property="Button.Padding" Value="10"></Setter>
                    <Setter Property="Button.Margin" Value="3"></Setter>
                </Style.Setters>
            </Style>
            <Style x:Key="DockPanelEditor">
                <Setter Property="DockPanel.Background" Value="Black"></Setter>
            </Style>
            <Style x:Key="EditorButton">
                <Setter Property="Button.Margin" Value="15"></Setter>
                <Setter Property="Button.Padding" Value="50"></Setter>
                <Setter Property="Button.HorizontalAlignment" Value="Center"></Setter>
                <Setter Property="Button.VerticalAlignment" Value="Center"></Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
