<Application x:Class="WPFExperiment.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="MenuItem">
                <Setter Property="Padding" Value="5"></Setter>
            </Style>
            <Style x:Key="ToolbarButton">
                <Style.Setters>
                    <Setter Property="Button.Padding" Value="10"></Setter>
                    <Setter Property="Button.Margin" Value="3"></Setter>
                    <Setter Property="Button.Opacity" Value="0.5"></Setter>
                </Style.Setters>
                
                <Style.Triggers>
                    <Trigger Property="Button.IsMouseOver" Value="true">
                        <Setter Property="Button.Opacity" Value="1.0"></Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="DockPanelEditor">
                <Setter Property="DockPanel.Background" Value="Black"></Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
